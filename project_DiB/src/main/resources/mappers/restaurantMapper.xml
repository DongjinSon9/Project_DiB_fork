<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTO Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.zerock.project_dib.restaurant.mappers.RestaurantMapper">
    <select id="selectAll" resultType="org.zerock.project_dib.restaurant.dto.RestaurantReviewDTO">
        select * from restaurant_review order by rno desc
    </select>
    <delete id="delete">
        DELETE FROM restaurant_review where rno=#{rno}
    </delete>
    <update id="update">
        UPDATE restaurant_review SET review_text=#{review_text},review_like=#{review_like} where rno=#{rno}
    </update>
    <insert id="insert">
        INSERT INTO restaurant_review (review_text,review_like) values (#{review_text},#{review_like})

    </insert>
    <select id="selectOne" resultType="org.zerock.project_dib.restaurant.dto.RestaurantReviewDTO">
         select * from restaurant_review where rno=#{rno}
    </select>
</mapper>