<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.zerock.project_dib.pse.mapper.NoticeMapper">
    <resultMap id="NoticeResultMap" type="org.zerock.project_dib.pse.domain.Notice">
        <id property="nno" column="nno" />
        <result property="noticeTitle" column="notice_title" />
        <result property="noticeContent" column="notice_content" />
        <result property="noticeImage" column="notice_image" />
        <result property="regdate" column="regdate" />
        <result property="moddate" column="moddate" />
    </resultMap>

    <select id="read" resultMap="NoticeResultMap" parameterType="long">
        SELECT * FROM notice WHERE nno = #{nno}
    </select>

    <insert id="insert" parameterType="org.zerock.project_dib.pse.domain.Notice">
        INSERT INTO notice (notice_title, notice_content, notice_image, regdate, moddate)
        VALUES (#{noticeTitle}, #{noticeContent}, #{noticeImage}, #{regdate}, #{moddate})
    </insert>

    <update id="update">
        UPDATE notice
        SET notice_title = #{noticeTitle},
            notice_content = #{noticeContent},
            notice_image = #{noticeImage},
            moddate = #{moddate}
        WHERE nno = #{nno}
    </update>

    <delete id="delete">
        DELETE FROM notice WHERE nno = #{nno}
    </delete>

    <!-- 페이징 처리를 위한 공지사항 목록 조회 -->
    <select id="getAll" resultMap="NoticeResultMap">
        SELECT * FROM notice
        <if test="pageRequestDTO.keyword != null and pageRequestDTO.keyword != ''">
            WHERE
            <if test='"t".equals(pageRequestDTO.type)'>
                notice_title LIKE CONCAT('%', #{pageRequestDTO.keyword}, '%')
            </if>
            <if test='"w".equals(pageRequestDTO.type)'>
                notice_content LIKE CONCAT('%', #{pageRequestDTO.keyword}, '%')
            </if>
        </if>
        ORDER BY nno DESC
        LIMIT #{pageRequestDTO.page}, #{pageRequestDTO.size}
    </select>

    <!-- 페이징 처리를 위한 공지사항 총 개수 조회 -->
    <select id="getCount">
        SELECT COUNT(*) FROM notice
        <if test="pageRequestDTO.keyword != null and pageRequestDTO.keyword != ''">
            WHERE
            <choose>
                <when test="pageRequestDTO.checkType('title')">
                    notice_title LIKE CONCAT('%', #{pageRequestDTO.keyword}, '%')
                </when>
                <when test="pageRequestDTO.checkType('content')">
                    notice_content LIKE CONCAT('%', #{pageRequestDTO.keyword}, '%')
                </when>
            </choose>
        </if>
    </select>
</mapper>